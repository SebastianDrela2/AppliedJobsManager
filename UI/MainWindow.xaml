<Window x:Class="AppliedJobsManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JobManager" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="_dataGrid" AutoGenerateColumns="False" ItemsSource="{Binding DataItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Link" Width="2*" Binding="{Binding Link}" />
                <DataGridTextColumn Header="Job" Width="*" Binding="{Binding Job}" />
                <DataGridTextColumn Header="Pay" Width="*" Binding="{Binding Pay}" />
                <DataGridTextColumn Header="Date" Width="*" Binding="{Binding Date}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
